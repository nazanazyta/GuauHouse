<h3 style="background-color: lightsalmon">@ViewData["error2"]</h3>*@
<div class="container-fluid w-50 mt-5">
    <form method="post" style="text-align: left" enctype="multipart/form-data">
        <input type="hidden" name="idusuario" value="@Model.IdUsuario" />
        <input type="hidden" name="imagen" value="@Model.Imagen" />
        @*<input type="hidden" name="rol" value="@Model.Rol" />
        <input type="hidden" name="username" value="@Model.UserName" />
        <input type="hidden" name="password" value="@Model.Password" />
        <input type="hidden" name="fechaalta" value="@Model.FechaAlta" />
        *@
        <table class="table">
            <tr class="row">
                <td class="col-5">
                    <label style="font-weight: bold">Nombre</label><br />
                    <label>@Model.Nombre</label>
                </td>
                <td class="col-5">
                    <input type="text" name="nombre" value="@Model.Nombre"
                           placeholder="Nuevo nombre" class="form-control-sm" /><br />
                </td>
            </tr>
            <tr class="row">
                <td class="col-5">
                    <label style="font-weight: bold">Apellidos</label><br />
                    <label>@Model.Apellidos</label>
                </td>
                <td class="col-5">
                    <input type="text" name="apellidos" value="@Model.Apellidos" class="form-control-sm" /><br />
                </td>
            </tr>
            <tr class="row">
                <td class="col-5">
                    <label style="font-weight: bold">DNI</label><br />
                    <label>@Model.Dni</label>
                </td>
                <td class="col-5">
                    <input type="text" name="dni" value="@Model.Dni" class="form-control-sm" /><br />
                </td>
            </tr>
            <tr class="row">
                <td class="col-5">
                    <label style="font-weight: bold">Email</label><br />
                    <label>@Model.Email</label>
                </td>
                <td class="col-5">
                    <input type="text" name="email" value="@Model.Email" class="form-control-sm" /><br />
                </td>
            </tr>
            <tr class="row">
                <td class="col-5">
                    <label style="font-weight: bold">Teléfono</label><br />
                    <label>@Model.Telefono</label>
                </td>
                <td class="col-5">
                    <input type="text" name="telefono" value="@Model.Telefono" class="form-control-sm" /><br />
                </td>
            </tr>
            <tr class="row">
                <td class="col-5">
                    <label style="font-weight: bold">Imagen</label><br />
                    @if (Model.Imagen != null)
                    {
                        <img src="~/images/@Model.Imagen" style="width: 12rem; height: 12rem" />
                    }
                    else
                    {
                        <label>No hay foto</label>
                    }
                </td>
                <td class="col-5">
                    <input type="file" name="fichero" />
                </td>
            </tr>
        </table>
